{
  "compilerOptions": {

    "target": "es2016",                              
    "experimentalDecorators": true,                 
    "module": "commonjs",                                
    "rootDir": ".",                                
    "moduleResolution": "node",                   
    "outDir": "./dist",                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                              
  },
  "exclude": [
    "node_modules"
  ]
}
